<p id="notice"><%= notice %></p>

<h1>Listing Balances</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @balances.each do |balance| %>
      <tr>
        <td><%= balance.amount %></td>
        <td><%= link_to 'Show', balance %></td>
        <td><%= link_to 'Edit', edit_balance_path(balance) %></td>
        <td><%= link_to 'Destroy', balance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if not(Balance.exists?) %>
  <%= link_to 'New Balance', new_balance_path %> |
<% end %>
<p>
  <%= link_to 'View Budgets', budgets_path %> |
  <%= link_to 'View Categories', categories_path %> |
  <%= link_to 'View Expenditures', expenditures_path %>

</p>

